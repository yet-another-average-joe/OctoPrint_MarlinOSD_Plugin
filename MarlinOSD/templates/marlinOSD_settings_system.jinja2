

<!-- ******************************************************************************** SYSTEM ************************************************************************* -->

<!-- BEGIN : PANE : SYSTEM -->
<div class="tab-pane" id="marlinOSD_settings_system">

  <!-- START : Start with Marlin UI : check box -->
  <div class="control-group">
    <div class="controls">
      <label class="checkbox">
        <input  type="checkbox"
                data-toggle="tooltip"
                data-bind="checked: settingsViewModel.settings.plugins.MarlinOSD.show_at_startup, tooltip: {}"
                title="{{ _('Show Marlin UI at boot time') }}" /> {{ _('Show Marlin UI when starting OctoPrint') }}
      </label>
      <div class="help-block_show_at_startup">{{ _('') }}</div>
    </div>
  </div>
  <!-- END : Start with Marlin UI : check box -->

  <!-- BEGIN : disable_HID : check box -->
  <div class="control-group">
    <div class="controls">
      <label class="checkbox">
        <input  type="checkbox"
                data-toggle="tooltip"
                data-bind="checked: settingsViewModel.settings.plugins.MarlinOSD.disable_HID, tooltip: {}"
                title="{{ _('Disable HID events when Marlin UI is displayed') }}" /> {{ _('Disable HID events') }}
      </label>
      <div class="help-block_disable_HID">{{ _('If checked, all user input events on the Raspberry Pi (keyboard, mouse, touchscreen, VNC etc.) will be ignored while Marlin UI is displayed.') }}</div>
    </div>
  </div>
  <!-- END : disable_HID : check box -->
<br/>
  <!-- BEGIN : SPI speed : edit +- -->
  <div class="control-group">
    <label class="control-label">{{ _('SPI speed') }}</label>
    <div class="controls" data-toggle="tooltip" title="{{ _('SPI clock speed for communication between the hat and the Pi') }}">
      <input  type="number"
              step="any"
              min="0"
              max="24"
              class="input-mini text-right"
              data-bind="value: settingsViewModel.settings.plugins.MarlinOSD.spi_speed"/>
      <span class="add-on">MHz</span>
      <div class="help-block_spi_speed">{{ _('If Marlin UI appears garbled or is unstable, decrease speed. This parameter has no influence on performance.') }}</div>
    </div>
  </div>
  <!-- END : SPI speed : edit +- -->
<br/>
  <!-- BEGIN : data timeout time : edit +- -->
  <div class="control-group">
    <label class="control-label">{{ _('Data timeout') }}</label>
    <div class="controls"
        data-toggle="tooltip"
        title="{{ _('Marlin UI button debounce time in milliseconds') }}">
      <input  type="number"
              step="100"
              min="500"
              class="input-mini text-right"
              data-bind="value: settingsViewModel.settings.plugins.MarlinOSD.dtr_timeout"/>
      <span class="add-on">ms</span>
      <div class="help-block_dtr_timeout">
        {{ _('After this delay, Marlin OSD will switch to Demo/Error Mode.<br/>DTR signal is sent only when Marlin refreshes its display (every second or so when idle). It may take longer when the motherboard is reset.<br/>
          Increase this delay if Marlin OSD switches to Demo/Error mode when resetting the motherboard.<br/>Recommended value : 3000 to 5000 milliseconds.') }}
      </div>
    </div>
  </div>
  <!-- END : data timeout time : edit +- -->
<br/>
  <!-- BEGIN : button debounce time : edit +- -->
  <div class="control-group">
    <label class="control-label">{{ _('Button debouncing') }}</label>
    <div class="controls" data-toggle="tooltip" title="{{ _('Marlin UI button debounce time in milliseconds') }}">
      <input  type="number"
              step="10"
              min="100"
              class="input-mini text-right"
              data-bind="value: settingsViewModel.settings.plugins.MarlinOSD.marlin_btn_debounce"/>
      <span class="add-on">ms</span>
      <div class="help-block_marlin_btn_debounce">
        {{ _('Increase this value if the Marlin UI window tends to flicker when the button is pressed, or if the button does not react as expected.<br>Recommended value : 200 to 500 milliseconds.') }}</div>
    </div>
  </div>
  <!-- END : button debounce time : edit +- -->


